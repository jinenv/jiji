        "cooldown": 0,
        "effects": ["bleed_chance_30"]
      },
      "ultimate": {
        "name": "Primal Fury",
        "description": "Enter a feral rage, gaining {power}% ATK and 50% lifesteal for 3 turns",
        "type": "berserk_mode",
        "power": 100,
        "cooldown": 5,
        "duration": 3,
        "effects": ["atk_boost", "lifesteal_50"]
      },
      "passive": {
        "name": "Pack Leader",
        "description": "Hunt-type allies gain {power}% of Ferox's ATK",
        "type": "type_synergy",
        "power": 25,
        "effects": ["hunt_type_buff"]
      }
    },
    
    "tenebrak": {
      "basic": {
        "name": "Shadow Rend",
        "description": "Tear through reality dealing {power}% ATK as pure darkness",
        "type": "dark_damage",
        "power": 155,
        "cooldown": 0,
        "effects": ["ignore_armor"]
      },
      "ultimate": {
        "name": "Nightmare Manifesto",
        "description": "All enemies take {power}% of their max HP as fear damage and lose 2 turns",
        "type": "fear_execute",
        "power": 25,
        "cooldown": 6,
        "duration": 2,
        "effects": ["fear", "turn_skip", "max_hp_damage"]
      },
      "passive": {
        "name": "Born of Fear",
        "description": "Gains {power}% ATK for each debuffed enemy on the field",
        "type": "scaling_power",
        "power": 15,
        "effects": ["atk_per_debuff"]
      }
    },

    "mythic_exemplar": {
      "basic": {
        "name": "Mythic Strike",
        "description": "Channel mythic energy to deal {power}% ATK",
        "type": "energy_damage",
        "power": 150,
        "cooldown": 0,
        "effects": []
      },
      "ultimate": {
        "name": "Mythic Awakening",
        "description": "Unleash true power - all stats +{power}%, all cooldowns reset",
        "type": "transformation",
        "power": 50,
        "cooldown": 6,
        "duration": 2,
        "effects": ["stat_boost_all", "cooldown_reset"]
