      "passive": {
        "name": "Mythic Presence",
        "description": "Start battle with all cooldowns ready and {power}% damage reduction",
        "type": "battle_start",
        "power": 20,
        "effects": ["cooldowns_ready", "damage_reduction"]
      }
    },
    
    "astral_sovereign": {
      "basic": {
        "name": "Astral Rend",
        "description": "Tear through dimensions dealing {power}% ATK, ignoring 50% DEF",
        "type": "pierce_damage",
        "power": 180,
        "cooldown": 0,
        "effects": ["defense_pierce_50"]
      },
      "ultimate": {
        "name": "Stellar Collapse",
        "description": "Create a singularity dealing {power}% ATK to all enemies and stunning them",
