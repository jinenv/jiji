  "ability_types": [
    "damage", "heal", "shield", "buff", "debuff", "summon",
    "transform", "execute", "lifesteal", "dot", "aoe", "chain",
    "pierce", "true_damage", "reflect", "absorb", "cleanse",
    "fear", "stun", "charm", "phase", "gravity", "time"
  ],
  
  "effect_keywords": [
    "bleed", "burn", "freeze", "stun", "silence", "poison",
    "slow", "haste", "regeneration", "thorns", "counter",
    "dodge", "block", "parry", "crit", "lifesteal", "execute",
    "pierce", "splash", "chain", "cleave", "rampage", "berserk",
    "fear", "charm", "phase", "intangible", "immunity"
  ],
  
  "power_scaling_guidelines": {
    "tier_5_mythic": {
      "basic_power": "140-160%",
      "ultimate_power": "250-300%", 
      "passive_power": "15-25%",
      "cooldown_range": "4-6"
    },
    "tier_7_divine": {
      "basic_power": "160-180%",
      "ultimate_power": "300-400%",
      "passive_power": "20-30%", 
      "cooldown_range": "5-6"
    },
    "tier_10_astral": {
      "basic_power": "180-200%",
      "ultimate_power": "400-500%",
      "passive_power": "25-35%",
      "cooldown_range": "5-7"
    },
    "tier_15_genesis": {
      "basic_power": "220-250%",
      "ultimate_power": "600-800%",
      "passive_power": "40-50%",
      "cooldown_range": "6-8"
    },
    "tier_18_singularity": {
      "basic_power": "300%+",
      "ultimate_power": "1000%+",
      "passive_power": "50%+",
      "cooldown_range": "7-10"
    }
  },

  "design_notes": {
    "basic_abilities": "Always 0 cooldown, tier 5+ should be 140%+ power",
    "ultimate_abilities": "Define the Esprit's identity, 4-10 turn cooldowns",
    "passive_abilities": "Always active, should feel impactful but not broken",
    "effects": "Use keywords from effect_keywords for consistency",
    "power_balance": "Higher tiers get more complex effects, not just bigger numbers"
  }
}