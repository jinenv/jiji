{
  "description": "Unique abilities for specific tier 5+ Esprits - no energy costs, just cooldowns",
  
  "template": {
    "esprit_name": {
      "basic": {
        "name": "Unique Basic Attack Name",
        "description": "Description dealing {power}% ATK damage",
        "type": "damage_type",
        "power": 140,
        "cooldown": 0,
        "effects": ["additional_effects_if_any"]
      },
      "ultimate": {
        "name": "Ultimate Ability Name",
        "description": "Powerful signature move with {power}% effectiveness",
        "type": "ultimate_type",
        "power": 250,
        "cooldown": 5,
        "duration": 3,
        "effects": ["special_effects"]
      },
      "passive": {
        "name": "Passive Name",
        "description": "Always-on benefit providing {power}% bonus",
        "type": "passive_type",
        "power": 20,
        "effects": ["passive_effects"]
      }
    }
  },
  
  "examples": {
    "ferox": {
      "basic": {
        "name": "Savage Bite",
